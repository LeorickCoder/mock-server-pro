{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/dev-server.ts",
    "src/mocks/**/*",
    "dev-project/**/*"
  ]
} 